{
    "$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
    "files": {
        "includes": [
            "**",
            "!**/.docker",
            "!**/.next",
            "!**/dist",
            "!**/node_modules",
            "!packages/db/generated"
        ]
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "bracketSameLine": true,
        "bracketSpacing": true,
        "lineEnding": "lf"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noUnknownAtRules": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "bracketSameLine": true,
            "semicolons": "always"
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "trailingCommas": "none"
        }
    },
    "css": {
        "formatter": {
            "enabled": true
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
