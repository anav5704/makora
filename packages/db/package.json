{
    "name": "@makora/db",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./src/index.ts"
        },
        "./*": {
            "types": "./dist/*.d.ts",
            "default": "./src/*.ts"
        }
    },
    "scripts": {
        "build": "tsdown",
        "db:studio": "cd postgres && prisma studio",
        "db:push": "cd postgres && prisma db push && cd ../sqlite && prisma db push",
        "db:generate": "cd postgres && prisma generate && cd ../sqlite && prisma generate"
    },
    "devDependencies": {
        "prisma": "catalog:prisma",
        "tsdown": "catalog:tsdown"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
      "@prisma/adapter-better-sqlite3": "catalog:prisma",
        "@prisma/adapter-pg": "catalog:prisma",
        "@prisma/client": "catalog:prisma",
        "dotenv": "catalog:dotenv",
        "pg": "^8.16.3"
    }
}
