{
    "name": "@makora/db",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./src/index.ts"
        },
        "./*": {
            "types": "./dist/*.d.ts",
            "default": "./src/*.ts"
        }
    },
    "scripts": {
        "build": "tsdown",
        "db:studio": "cd chess && prisma studio",
        "db:seed": "cd chess && prisma db seed",
        "db:push": "cd main && prisma db push && cd ../chess && prisma db push",
        "db:generate": "cd main && prisma generate && cd ../chess && prisma generate"
    },
    "devDependencies": {
        "prisma": "catalog:prisma",
        "tsdown": "catalog:tsdown"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^7.0.1",
        "@prisma/client": "catalog:prisma",
        "chess.js": "catalog:chess",
        "dotenv": "catalog:dotenv",
        "pg": "^8.16.3"
    }
}
