model ChessAccount {
  id        String   @id @default(uuid()) @map("_id")
  platform  Platform
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([username])
  @@map("chess_account")
}

enum Platform {
  CHESS_COM
  LICHESS_ORG
}
